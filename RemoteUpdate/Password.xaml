<Window x:Name="Password1" x:Class="RemoteUpdate.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteUpdate"
        mc:Ignorable="d"
        Title="Encryption Password" Height="120" Width="300" Icon="Pictures\RemoteUpdate.png" ResizeMode="CanMinimize" Background="#FFCDC8C8" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Password" HorizontalAlignment="Left" Margin="4,10,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBoxPassword" Password="" Margin="64,13,10,0" VerticalAlignment="Top" Height="23" GotMouseCapture="PasswordGotFocus" GotKeyboardFocus="PasswordGotFocus" />
        <Button x:Name="ButtonCredentialOK" Content="OK" Margin="0,0,10,10" Click="ButtonOk" IsDefault="True" HorizontalAlignment="Right" Width="115" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="ButtonCredentialCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="ButtonCancel" IsCancel="True"/>
    </Grid>
</Window>
