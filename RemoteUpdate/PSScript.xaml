<Window x:Name="PSScript1" x:Class="RemoteUpdate.PSScript"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteUpdate"
        mc:Ignorable="d"
        Title="Powershell Script" Height="300" Width="600" Icon="Pictures\RemoteUpdate.png" ResizeMode="CanResizeWithGrip" Background="#FFCDC8C8" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox Margin="20,20,20,60" TextWrapping="Wrap" Text="TextBox" AcceptsReturn="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="ButtonCredentialOK" Content="OK" Margin="0,0,20,20" Click="ButtonOk" IsDefault="True" HorizontalAlignment="Right" Width="115" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="ButtonCredentialCancel" Content="Cancel" Margin="0,0,160,20" Click="ButtonCancel" IsCancel="True" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
